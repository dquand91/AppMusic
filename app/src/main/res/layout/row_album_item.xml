<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/linearCardView_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/imgAlbum_album"
            android:scaleType="fitXY"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvTenAlbum_album"
            android:text="Đây là nơi hiển thị nội dung tên của Album"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:textSize="18sp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvTenCaSi_Album"
            android:text="Hiển thị ten Ca Si Album ở đây"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:textSize="14sp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="#737373"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>





</android.support.v7.widget.CardView>