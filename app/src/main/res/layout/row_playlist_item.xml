<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/imgBackGround_playlistItem"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"/>

    <View
        android:background="@drawable/custom_background_banner"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:alpha="0.5"/>

    <ImageView
        android:id="@+id/imgPlayListThumb_playlistItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"
        android:layout_alignBottom="@id/imgBackGround_playlistItem"/>
    <TextView
        android:id="@+id/tvName_playlistItem"
        android:text="Những bài hit một thời"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="13dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imgPlayListThumb_playlistItem"
        android:layout_alignBottom="@id/imgPlayListThumb_playlistItem"/>


</RelativeLayout>