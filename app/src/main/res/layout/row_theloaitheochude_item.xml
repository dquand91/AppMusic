<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frameLayout_AllTheLoaiTheoChuDeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_TheLoaiTheoChuDeItem"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="180dp"
                android:layout_height="180dp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tvTenTheLoai_TheLoaiTheoChuDeItem"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="left"
            android:maxWidth="160dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTenCaSy_TheLoaiTheoChuDeItem"
            android:text="Various Artists"
            android:textSize="12sp"
            android:textColor="#8f8f8f"
            android:gravity="left"
            android:maxWidth="160dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v7.widget.CardView>