<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">
    
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvIndexBaiHat_ItemDanhsachbaihat"
            android:text="1"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/tvTenBaiHat_ItemDanhsachbaihat"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toRightOf="@+id/tvIndexBaiHat_ItemDanhsachbaihat"
            android:text="Ten Ca Khuc"
            android:textSize="20sp"
            android:textColor="#030303"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tvTenCaSi_ItemDanhsachbaihat"
            android:layout_below="@+id/tvTenBaiHat_ItemDanhsachbaihat"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#979797"
            android:textSize="20sp"
            android:text="Ca si"
            android:layout_toRightOf="@+id/tvIndexBaiHat_ItemDanhsachbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/imgLuotThich_ItemDanhsachbaihat"
            android:src="@drawable/iconlove"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>