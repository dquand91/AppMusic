<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameLayout_AllPlayListItem"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imgAllPlayList_AllPlayListItem"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="180dp"
            android:layout_height="180dp"/>

    </FrameLayout>

    <TextView
        android:textSize="15sp"
        android:textColor="#000000"
        android:text="Ten cua Play List"
        android:gravity="left"
        android:maxWidth="200dp"
        android:maxLines="2"
        android:lines="2"
        android:ellipsize="end"
        android:id="@+id/tvTenPlayList_AllPlayListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="12sp"
        android:textColor="#898989"
        android:text="Various Artists"
        android:gravity="left"
        android:maxWidth="200dp"
        android:maxLines="1"
        android:lines="1"
        android:ellipsize="end"
        android:id="@+id/tvCaSi_AllPlayListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>