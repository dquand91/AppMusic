<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgBatHat_SearchItem"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/tvTenBaihat_SearchItem"
        android:textSize="18sp"
        android:textColor="#0a0a0a"
        android:text="Ten Bai hat"
        android:layout_toRightOf="@id/imgBatHat_SearchItem"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTenCaSi_SearchItem"
        android:textSize="14sp"
        android:textColor="#787878"
        android:text="Ten Bai hat"
        android:layout_toRightOf="@id/imgBatHat_SearchItem"
        android:layout_below="@id/tvTenBaihat_SearchItem"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imgLuotThich_SearchItem"
        android:src="@drawable/iconlove"
        android:layout_marginRight="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>